<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loan Management System - Dashboard</title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    
</head>
<body>
    <div class="dashboard-container">
        <div class="menu-container">
            <div class="hamburger-menu">
                <i class="fa-solid fa-bars"></i>
            </div>
            <div class="dropdown-menu">
                <a href="https://www.facebook.com/cjcarl.pactaoin" class="dropdown-item" id="contactUs" target="_blank">
                    <i class="fa-solid fa-envelope"></i>
                    Contact Us
                </a>
                <a href="#" class="dropdown-item" id="logoutOption">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    Logout
                </a>
            </div>
        </div>
        <div class="header-container">
            <h1>Welcome, <%= name %>!</h1>
            <p>Here's a summary of your lending activity.</p>
        </div>
        <div class="summary-box-container">
            <div class="summary-box" id="borrower">
                <i class="fa-solid fa-user"></i>
                <h3>Total Borrowers</h3>
                <h2>Loading...</h2>
            </div>
            <div class="summary-box" id="loaned">
                <i class="fa-solid fa-peso-sign"></i>
                <h3>Total Loaned</h3>
                <h2>Loading...</h2>
            </div>
            <div class="summary-box" id="payments">
                <i class="fa-solid fa-circle-check"></i>
                <h3>Total Payments</h3>
                <h2>Loading...</h2>
            </div>
            <div class="summary-box" id="overdue">
                <i class="fa-solid fa-circle-exclamation"></i>
                <h3>Overdue</h3>
                <h2>Loading...</h2>
            </div>
            <div class="borrower-btn-container">
                <a href="/add-borrower">
                    <button class="borrower-btn" id="add-brw-btn">
                        <i class="fa-solid fa-plus"></i>
                        Add New Borrower
                    </button>
                </a>
                <a href="/borrowers">
                    <button class="borrower-btn" id="view-brw-btn">
                        <i class="fa-solid fa-clipboard-list"></i>
                        View All Borrowers
                    </button>
                </a>
            </div>
        </div>
        <div class="flex-container">
            <div class="left-content">
                <h2 class="table-header">Upcoming/Overdue Payments</h2>
                <div class="payment-table-container">
                    <table class="payment-table">
                    <thead>
                        <tr>
                        <th>Borrower</th>
                        <th>Due Date</th>
                        <th>Amount Due</th>
                        <th id="status">Status</th>
                        <th id="action">Action</th>
                        </tr>
                    </thead>
                    <tbody id="payment-tbody">
                        <!-- Dynamic rows go here -->
                    </tbody>
                    </table>
                </div>
            </div>
            <div class="right-content">
                <h2 class="loan-actions">Loan Quick Action</h2>
                <button class="loan-btn" id="add-loan-btn" onclick="window.location.href='/add-loan'">
                    <i class="fa-solid fa-plus"></i>
                    Add New Loan
                </button>
                <button class="loan-btn" id="view-loan-btn" onclick="window.location.href='/loans'">
                    <i class="fa-solid fa-folder-open"></i>
                       View All Loans
                </button>
                <button class="loan-btn" id="add-pay-btn" onclick="window.location.href='/record-payment'">
                    <i class="fa-solid fa-wallet"></i>
                    Record Payment
                </button>
                <button class="loan-btn" id="view-pay-btn" onclick="window.location.href='/payments'">
                    <i class="fa-solid fa-list"></i>
                    Payment History
                </button>
            </div>
        </div>
        
    </div>
    <script>
        const userId = '<%= userId %>'; // From server
    </script> 
    <script src="/js/dashboard.js"></script>
    <script src="https://kit.fontawesome.com/cf0fa1fa7a.js" crossorigin="anonymous"></script>

    <!-- Logout Confirmation Modal -->
    <div class="remove-bg" id="logoutModal">
        <div class="remove-flex">
            <div class="remove-container">
                <div class="remove-header">
                    <p>Logout Confirmation</p>
                </div>
                <form class="remove-form">
                    <label>Are you sure you want to logout?</label>
                    <div class="remove-btn-cont">
                        <button type="button" id="logoutCancel" class="removeBtn cancel">Cancel</button>
                        <input type="submit" class="removeBtn confirm" value="Confirm">
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
